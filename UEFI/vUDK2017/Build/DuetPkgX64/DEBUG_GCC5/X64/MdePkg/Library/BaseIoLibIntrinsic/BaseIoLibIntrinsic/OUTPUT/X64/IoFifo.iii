    DEFAULT REL
    SECTION .text

;------------------------------------------------------------------------------
; void
;
; IoReadFifo8 (
; UINTN Port,
; UINTN Size,
; void *Buffer
; );
;------------------------------------------------------------------------------
global IoReadFifo8
IoReadFifo8:
    cld
    xchg rcx, rdx
    xchg rdi, r8 ; rdi: buffer address; r8: save rdi
rep insb
    mov rdi, r8 ; restore rdi
    ret

